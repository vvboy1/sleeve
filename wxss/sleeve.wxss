/*偏移动画，适合大图标*/
.rect-hover{
    position: relative;
    top: 3rpx;
    left: 3rpx;
    box-shadow: 0px 0px 8px rgba(0,0,0,.1) inset;
}
/*这些缩放只要适合小图标*/
/*小等缩小动画，*/
.small-hover{
    opacity: 0.9;
    transform: scale(0.95,0.95);
}
/*中等缩小动画*/
.medium-hover{
    opacity: 0.8;
    transform: scale(0.85,0.85);
}